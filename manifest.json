{
    "manifest_version": 3,
    "name": "CodeAssist",
    "version": "1.0",
    "description": "A code assistant using ChatGPT.",
    "permissions": ["activeTab", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  